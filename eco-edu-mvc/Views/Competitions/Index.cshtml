@model IEnumerable<eco_edu_mvc.Models.Entities.Competition>

@{
    Layout = "_Layout";
}

<h1>Competitions</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New Competition</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Active</th>
            <th>Image</th>
            <th>Prizes</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.StartDate</td>
                <td>@item.EndDate</td>
                <td>@item.Active</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Images))
                    {
                        <img src="@Url.Content("~/Images/" + item.Images)" alt="competition Image" style="max-width: 50px; max-height: 50px;" />
                    }
                    else
                    {
                        <span>None</span>
                    }
                </td>
                <td>@item.Prizes</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CompetitionId" class="btn btn-warning">Edit</a>
                    <form asp-action="DeleteCompetition" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this competition?');">
                        <input type="hidden" name="id" value="@item.CompetitionId" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
    @if (TempData["PermissionDenied"] != null && (bool)TempData["PermissionDenied"])
    {
        <div class="alert alert-danger" role="alert">
            You do not have permission to perform this action.
        </div>
    }
</table>
