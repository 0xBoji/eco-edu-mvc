@model eco_edu_mvc.Models.Entities.Competition

@{
	Layout = "_Layout";
}

<div class="row">
    <h1 class="col-lg-10 col-md-8 col-sm-6">Update Competition</h1>
    <a asp-controller="competitions" asp-action="index" class="btn btn-primary col-lg-2 col-md-4 col-sm-6 create-a">
        Back to index
    </a>
</div>

<hr />
<form asp-action="edit" class="row" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="CompetitionId" />
    <div class="form-group col-lg-12 my-2">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group col-lg-2 my-2">
        <label asp-for="Description" class="control-label">Description</label>
        <input asp-for="Description" class="form-control" type="text" required />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    
    <div class="form-group col-lg-2 my-2">
        <label asp-for="StartDate" class="control-label">StartDate</label>
        <input asp-for="StartDate" class="form-control" type="date" required />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="form-group col-lg-2 my-2">
        <label asp-for="EndDate" class="control-label">EndDate</label>
        <input asp-for="EndDate" class="form-control" type="date" required />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <div class="form-group col-lg-2 my-2">
        <label asp-for="Prizes" class="control-label">Prizes</label>
        <input asp-for="Prizes" class="form-control" type="text" />
        <span asp-validation-for="Prizes" class="text-danger"></span>
    </div>

    <div class="form-group col-lg-2 my-2">
        <label class="control-label"><abbr title="Only accept files: .jpg, .jpeg, .png">Image</abbr></label>
        <input type="file" name="file" class="form-control-file" accept=".jpg, .jpeg, .png" required />
    </div>

    <div class="form-group col-lg-12 my-2">
        <button type="submit" class="btn btn-outline-success">Save</button>
    </div>
</form>
