@model IEnumerable<eco_edu_mvc.Models.Entities.CompetitionEntry>

@{
    Layout = "_LayoutEcoEdu";
}

<h2 style="padding:2vw 0 1vw 1vw;">Competition Ranking</h2>

<table class="table">
    <thead>
        <tr>
            <th>Rank</th>
            <th>UserName</th>
            <th>Competition Title</th>
            <th>Score</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count(); i++)
        {
            var entry = Model.ElementAt(i);
            <tr>
                <td>@(i + 1)</td>
                <td>@entry.User.Username</td>
                <td>@entry.Competition.Title</td>
                <td>@entry.GradeTests.FirstOrDefault()?.Score</td>
            </tr>
        }
    </tbody>
</table>
