@model IEnumerable<eco_edu_mvc.Models.Entities.CompetitionEntry>

@{
    ViewData["Title"] = "Grades";
}

<h2>Competition Entries</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EntryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Competition.Title)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EntryId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Competition.Title)
                </td>
                <td>
                    <a asp-action="Grade" asp-route-id="@item.EntryId">Grade</a>
                </td>
            </tr>
        }
    </tbody>
</table>
