@model eco_edu_mvc.Models.Entities.Seminar

@{
    Layout = "_LayoutEcoEdu";
}

<h2>Delete Seminar</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Seminar</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>
        <dt class="col-sm-2">
            Location
        </dt>
        <dd class="col-sm-10">
            @Model.Location
        </dd>
        <dt class="col-sm-2">
            Date
        </dt>
        <dd class="col-sm-10">
            @Model.OccursDate?.ToString("dd MMM yyyy")
        </dd>
        <dt class="col-sm-2">
            Participants
        </dt>
        <dd class="col-sm-10">
            @Model.Participants
        </dd>
        <dt class="col-sm-2">
            Active
        </dt>
        <dd class="col-sm-10">
            @Model.Active
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="SeminarId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
