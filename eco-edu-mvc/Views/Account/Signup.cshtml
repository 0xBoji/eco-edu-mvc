@model eco_edu_mvc.Models.AccountsViewModel.SignupModel

<head>
	<title>SignUp</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

	<link rel="stylesheet" href="~/login/css/style.css">

</head>
<body class="img js-fullheight" style="background-image: url(/login/images/bg.jpg);">
	<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
			</div>
			<div class="row justify-content-center">
				<div class="col-md-6 col-lg-4">
					<div class="login-wrap p-0">
						<h3 class="mb-4 text-center">Sign Up</h3>
						<form asp-action="Signup" class="signin-form" method="post">
							<div asp-validation-summary="All" class="text-warning"></div>
							<div class="form-group">
								<input type="text" class="form-control" placeholder="Username" asp-for="Username" required>
							</div>
							<div class="form-group">
								<input type="text" class="form-control" placeholder="Fullname" asp-for="Fullname" required>
							</div>
							<div class="form-group">
								<input type="text" class="form-control" placeholder="UserCode" asp-for="UserCode" required>
							</div>
							<div class="form-group">
								<input id="password-field" type="password" class="form-control" placeholder="Password" asp-for="Password" required>
								<span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
							</div>
							<div class="form-group">
								<input id="confirm-password-field" type="password"  asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" required>
								<span toggle="#confirm-password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
							</div>
							<div class="form-group">
								<button type="submit" class="form-control btn btn-primary submit px-3">Sign Up</button>
							</div>
						</form>
						<p class="w-100 text-center"><a href="@Url.Action("login", "account")">&mdash; Or Sign In &mdash;</a></p>
					</div>
				</div>
			</div>
		</div>
	</section>

	<script src="~/login/js/jquery.min.js"></script>
	<script src="~/login/js/popper.js"></script>
	<script src="~/login/js/bootstrap.min.js"></script>
	<script src="~/login/js/main.js"></script>
