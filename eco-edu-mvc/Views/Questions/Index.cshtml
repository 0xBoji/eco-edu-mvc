@model IEnumerable<eco_edu_mvc.Models.Entities.Question>

@{
    Layout = "_Layout";
}

<style>
    .darker {
        background-color: #000;
    }
</style>

<div class="row">
    <h1 class="col-lg-10 col-md-8 col-sm-6">Question List</h1>
    <a asp-controller="questions" asp-action="post" class="btn btn-primary col-lg-2 col-md-4 col-sm-6 create-a">
        Create new question
    </a>
</div>

<hr class="darker" />
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Survey Title</th>
            <th>Question</th>
            <th>Question Type</th>
            <th>Answer 1</th>
            <th>Answer 2</th>
            <th>Answer 3</th>
            <th>Correct Answer</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var question in Model)
        {
            <tr>
                <td>@question.QuestionId</td>
                <td>@question.Survey.Title</td>
                <td>@question.QuestionText</td>
                <td>@question.QuestionType</td>
                <td>@(question.Answer1 ?? "None")</td>
                <td>@(question.Answer2 ?? "None")</td>
                <td>@(question.Answer3 ?? "None")</td>
                <td>@(question.CorrectAnswer ?? "None")</td>
                <td>
                    <a asp-controller="Questions" asp-action="Update" asp-route-id="@question.QuestionId" class="btn btn-outline-secondary">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<hr class="darker" />
<a asp-controller="Surveys" asp-action="Index" class="btn btn-info">To survey list</a>
<a asp-controller="Responses" asp-action="Index" class="btn btn-info">To response list</a>
