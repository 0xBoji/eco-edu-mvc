@model eco_edu_mvc.Models.SurveyModels.SurveyModel

<h1>Create new survey</h1>
<hr />
<div class="row">
    <form asp-controller="Surveys" asp-action="Post" class="col-lg-12" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group col-lg-4">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group col-lg-2">
            <label asp-for="Topic" class="control-label"></label>
            <select asp-for="Topic" class="form-control">
                <option value="Planting" selected="selected">Planting</option>
                <option value="Cleaning">Cleaning</option>
            </select>
        </div>
        <div class="form-group col-lg-6">
            <label asp-for="CreatedBy" class="control-label"></label>
            <input asp-for="CreatedBy" class="form-control" />
            <span asp-validation-for="CreatedBy" class="text-danger"></span>
        </div>
        <div class="form-group col-lg-3">
            <label asp-for="CreateDate" class="control-label"></label>
            <input asp-for="CreateDate" class="form-control" />
            <span asp-validation-for="CreateDate" class="text-danger"></span>
        </div>
        <div class="form-group col-lg-3">
            <label asp-for="EndDate" class="control-label"></label>
            <input asp-for="EndDate" class="form-control" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
        <div class="form-group col-lg-3">
            <label asp-for="TargetAudience" class="control-label"></label>
            <select asp-for="TargetAudience" class="form-control">
                <option value="All" selected="selected">All</option>
                <option value="Staff">Staff</option>
                <option value="Student">Student</option>
            </select>
        </div>
        <div class="form-group form-check col-lg-3">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="Active" /> @Html.DisplayNameFor(model => model.Active)
            </label>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>

<div>
    <a asp-action="List">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
