@model eco_edu_mvc.Models.SurveyModels.SurveyModel

@{
    Layout = "_Layout";
}

<div class="row">
    <h1 class="col-lg-10 col-md-8 col-sm-6">Create new survey</h1>
    <a asp-controller="surveys" asp-action="index" class="btn btn-primary col-lg-2 col-md-4 col-sm-6 create-a">
        Back to index
    </a>
</div>

<hr />
<form asp-controller="Surveys" asp-action="Post" method="post" class="row" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group col-lg-12 my-2">
        <label class="control-label">Title</label>
        <input asp-for="Title" class="form-control" required />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group col-lg-2 my-2">
        <label class="control-label">Create Date</label>
        <input asp-for="CreateDate" class="form-control" type="date" readonly />
        <span asp-validation-for="CreateDate" class="text-danger"></span>
    </div>
    <div class="form-group col-lg-2 my-2">
        <label class="control-label">End Date</label>
        <input asp-for="EndDate" class="form-control" type="date" required />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>
    <div class="form-group col-lg-2 my-2">
        <label class="control-label">Topic</label>
        <select asp-for="Topic" class="form-control">
            <option value="Planting" selected="selected">Planting</option>
            <option value="Cleaning">Cleaning</option>
        </select>
    </div>
    <div class="form-group col-lg-2 my-2">
        <label class="control-label">Target Audience</label>
        <select asp-for="TargetAudience" class="form-control">
            <option value="All" selected="selected">All</option>
            <option value="Staff">Staff</option>
            <option value="Student">Student</option>
        </select>
    </div>
    <div class="form-group col-lg-2 my-2">
        <label class="control-label">Status</label>
        <select asp-for="Active" id="Active" name="Active" class="form-control">
            <option value="true">Available</option>
            <option value="false">Unavailable</option>
        </select>
    </div>
    <div class="form-group col-lg-2 my-2">
        <label class="control-label"><abbr title="Only accept files: .jpg, .jpeg, .png">Image</abbr></label>
        <input type="file" name="file" class="form-control-file" accept=".jpg, .jpeg, .png" />
    </div>

    <div class="form-group col-lg-12 my-2">
        <button type="submit" class="btn btn-outline-success">Create</button>
    </div>
</form>
